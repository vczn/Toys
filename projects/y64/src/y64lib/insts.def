#ifndef INST
#define INST(NAME, ICODE, IFUN)
#endif

#ifndef COND
#define COND(NAME, IFUN)
#endif

//   name       icode  ifun
INST(halt,      0x0,   0)
INST(nop,       0x1,   0)
INST(rrmovq,    0x2,   0)
INST(irmovq,    0x3,   0)
INST(rmmovq,    0x4,   0)
INST(mrmovq,    0x5,   0)
INST(addq,      0x6,   0)
INST(subq,      0x6,   1)
INST(andq,      0x6,   2)
INST(xorq,      0x6,   3)
INST(jmp,       0x7,   0)
INST(call,      0x8,   0)
INST(ret,       0x9,   0)
INST(pushq,     0xA,   0)
INST(popq,      0xB,   0)


// pseudo instructions
INST(dot_pos,   0xC,   0)
INST(dot_align, 0xC,   1)
INST(dot_quad,  0xC,   2)


// conditional instructions
// cmov and j are both invalid instructions
//   name       icode  ifun
INST(cmov,      0x2,   0)
INST(cmovle,    0x2,   1)
INST(cmovl,     0x2,   2)
INST(cmove,     0x2,   3)
INST(cmovne,    0x2,   4)
INST(cmovge,    0x2,   5)
INST(cmovg,     0x2,   6)

INST(j,         0x7,   0)
INST(jle,       0x7,   1)
INST(jl,        0x7,   2)
INST(je,        0x7,   3)
INST(jne,       0x7,   4)
INST(jge,       0x7,   5)
INST(jg,        0x7,   6)

COND(le, 0)
COND(l,  1)
COND(e,  2)
COND(ne, 4)
COND(ge, 5)
COND(g,  6)

#ifdef INST
#undef INST
#endif

#ifdef COND
#undef COND
#endif